{
  "openapi": "3.0.4",
  "info": {
    "title": "Kafka Demo API",
    "description": "Producer / Consumer / Admin for Kafka (NET 9)",
    "version": "v1"
  },
  "paths": {
    "/api/topics": {
      "get": {
        "tags": [
          "Kafka"
        ],
        "summary": "Get topics",
        "operationId": "ListTopics",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Kafka"
        ],
        "operationId": "CreateTopic",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTopicRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/produce": {
      "post": {
        "tags": [
          "Kafka"
        ],
        "operationId": "Produce",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProduceRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/messages": {
      "get": {
        "tags": [
          "Kafka"
        ],
        "operationId": "RecentMessages",
        "parameters": [
          {
            "name": "take",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Kafka"
        ],
        "summary": "Remove messages from in-memory buffer",
        "operationId": "ClearMessages",
        "parameters": [
          {
            "name": "take",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/messages/drain": {
      "post": {
        "tags": [
          "Kafka"
        ],
        "summary": "Read and remove messages from in-memory buffer",
        "operationId": "DrainMessages",
        "parameters": [
          {
            "name": "take",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/messages/capacity": {
      "post": {
        "tags": [
          "Kafka"
        ],
        "summary": "Set in-memory buffer capacity",
        "operationId": "SetMessageBufferCapacity",
        "parameters": [
          {
            "name": "capacity",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "KafkaApp"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateTopicRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "partitions": {
            "type": "integer",
            "format": "int32"
          },
          "replicationFactor": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ProduceRequest": {
        "type": "object",
        "properties": {
          "headers": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "nullable": true
          },
          "key": {
            "type": "string",
            "nullable": true
          },
          "topic": {
            "type": "string",
            "nullable": true
          },
          "value": {
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}