        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfigureAwait Demo" Height="200" Width="400">
    <StackPanel Margin="20">
        <Button Content="With ConfigureAwait(false)" Click="Button_WithoutContext_Click" Margin="5"/>
